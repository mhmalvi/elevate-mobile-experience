<?xml version="1.0" encoding="utf-8"?>
<!--
  Data Extraction Rules for Android 12+ (API 31+)
  Controls what data is included in cloud backups and device-to-device transfers.
  
  SECURITY: Exclude all sensitive data (auth tokens, databases, encryption keys)
  from both cloud backup and device-to-device transfer.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude everything by default for security -->
        <exclude domain="root" />
        <exclude domain="database" />
        <exclude domain="sharedpref" />
        <exclude domain="file" />
        <exclude domain="external" />
    </cloud-backup>
    <device-transfer>
        <!-- Exclude everything by default for security -->
        <exclude domain="root" />
        <exclude domain="database" />
        <exclude domain="sharedpref" />
        <exclude domain="file" />
        <exclude domain="external" />
    </device-transfer>
</data-extraction-rules>
