# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from: https://app.supabase.com -> Project Settings -> API
VITE_SUPABASE_URL="https://your-project.supabase.co"
VITE_SUPABASE_ANON_KEY="your_supabase_anon_key"
VITE_SUPABASE_PROJECT_ID="your_supabase_project_id"

# Backend only - DO NOT expose in frontend
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"
SUPABASE_ACCESS_TOKEN="your_supabase_access_token"

# ============================================
# ENCRYPTION (for integration OAuth tokens)
# ============================================
# Generate a random 32+ character string
# Example: openssl rand -base64 32
ENCRYPTION_KEY="your-32-character-random-encryption-key"

# ============================================
# STRIPE CONFIGURATION
# ============================================
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="your_stripe_secret_key"

# Stripe Webhook Secrets (from https://dashboard.stripe.com/webhooks)
# Webhook #1: Connect accounts (invoice payments)
# URL: https://your-project.supabase.co/functions/v1/stripe-webhook
STRIPE_WEBHOOK_SECRET="your_stripe_webhook_secret"

# Webhook #2: Platform account (subscriptions)
# URL: https://your-project.supabase.co/functions/v1/subscription-webhook
STRIPE_WEBHOOK_SECRET_PLATFORM="your_stripe_platform_webhook_secret"

# Stripe Price IDs (from Products in Stripe Dashboard)
# Monthly prices: Solo $29/mo, Crew $49/mo, Pro $79/mo
# Frontend (visible to client - used for checkout):
VITE_STRIPE_PRICE_ID_SOLO="price_xxxxx"
VITE_STRIPE_PRICE_ID_CREW="price_xxxxx"
VITE_STRIPE_PRICE_ID_PRO="price_xxxxx"

# Annual prices: Solo $288/yr, Crew $468/yr, Pro $780/yr
VITE_STRIPE_PRICE_ID_SOLO_ANNUAL="price_xxxxx"
VITE_STRIPE_PRICE_ID_CREW_ANNUAL="price_xxxxx"
VITE_STRIPE_PRICE_ID_PRO_ANNUAL="price_xxxxx"

# Backend (Edge Functions only - DO NOT use VITE_ prefix):
STRIPE_PRICE_ID_SOLO="price_xxxxx"
STRIPE_PRICE_ID_CREW="price_xxxxx"
STRIPE_PRICE_ID_PRO="price_xxxxx"

# ============================================
# REVENUECAT CONFIGURATION
# ============================================
# Get these from: https://app.revenuecat.com > App Settings
# IMPORTANT: Use PUBLIC keys, NOT secret keys (sk_)
# Android: goog_xxx, iOS: appl_xxx, Web: rcb_xxx
VITE_REVENUECAT_ANDROID_API_KEY="goog_your_android_public_key"
VITE_REVENUECAT_IOS_API_KEY="appl_your_ios_public_key"
VITE_REVENUECAT_WEB_API_KEY="rcb_your_web_billing_key"

# IMPORTANT: Get this from: https://app.revenuecat.com/webhooks
# After creating the webhook, copy the authorization header value here
# Webhook URL: https://your-project.supabase.co/functions/v1/revenuecat-webhook
REVENUECAT_WEBHOOK_SECRET="your_webhook_secret_from_revenuecat_dashboard"

# ============================================
# EMAIL & SMS CONFIGURATION
# ============================================
# Resend API (https://resend.com/api-keys)
RESEND_API_KEY="your_resend_api_key"

# IMPORTANT: Verify your domain in Resend to send production emails
# Without this, emails will be sent from onboarding@resend.dev (test only)
# Format: "Business Name <noreply@yourdomain.com>"
EMAIL_FROM_DOMAIN="TradieMate <noreply@tradiemate.com.au>"

# Twilio Configuration (https://www.twilio.com/console)
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="+1234567890"

# ============================================
# AI / VOICE COMMANDS
# ============================================
# OpenRouter API key (https://openrouter.ai/keys)
# Used by process-voice-command edge function
OPENROUTER_API_KEY="your_openrouter_api_key"

# ============================================
# XERO INTEGRATION (Optional)
# ============================================
# Get these from: https://developer.xero.com/app/manage
XERO_CLIENT_ID="YOUR_XERO_CLIENT_ID"
XERO_CLIENT_SECRET="YOUR_XERO_CLIENT_SECRET"
XERO_REDIRECT_URI="https://app.tradiemate.com.au/settings/integrations?xero=success"

# ============================================
# QUICKBOOKS INTEGRATION (Optional)
# ============================================
# Get these from: https://developer.intuit.com/app/developer/dashboard
QUICKBOOKS_CLIENT_ID="YOUR_QUICKBOOKS_CLIENT_ID"
QUICKBOOKS_CLIENT_SECRET="YOUR_QUICKBOOKS_CLIENT_SECRET"
QUICKBOOKS_REDIRECT_URI="https://app.tradiemate.com.au/settings/integrations?quickbooks=success"

# ============================================
# APPLICATION SETTINGS
# ============================================
# Production URL for redirects and webhooks
APP_URL="https://app.tradiemate.com.au"

# Vercel deployment token (for CI/CD)
VERCEL_TOKEN="your_vercel_token"
